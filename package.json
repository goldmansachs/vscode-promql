{
	"name": "vscode-prometheus",
	"displayName": "Prometheus",
	"description": "prometheus integration for vscode (WIP)",
	"publisher": "slrtbtfs",
	"license": "Apache-2.0",
	"repository": "https://github.com/slrtbtfs/vscode-prometheus",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Language Packs"
	],
	"activationEvents": [
		"onLanguage:promql",
		"onLanguage:yaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [],
		"languages": [
			{
				"id": "promql",
				"extensions": [
					".promql"
				],
				"aliases": [
					"PromQL",
					"promql"
				]
			}
		],
		"grammars": [
			{
				"language": "promql",
				"scopeName": "source.promql",
				"path": "./syntaxes/promql.tmlanguage.json"
			}
		],
		"configuration": [
			{
				"title": "PromQL VS Code Extension",
				"properties": {
					"vscode-promql.langserverConfigPath": {
						"type": "string",
						"description": "Path to the PromQL langserver configuration",
						"scope": "window"
					},
					"vscode-promql.langserverBinaryPath": {
						"type": "string",
						"default": "promql-langserver",
						"description": "Path to the PromQL langserver binary",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"compile-ts": "tsc -p ./",
		"vscode:prepublish": "make",
		"compile": "make",
		"watch": "tsc -watch -p ./",
		"pretest": "make",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@types/ws": "^6.0.3",
		"supports-color": "^7.1.0",
		"vscode-languageclient": "^5.2.1",
		"ws": "^7.1.2"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.22",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"mocha": "^6.2.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.0.2"
	}
}
