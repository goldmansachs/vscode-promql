{
	"name": "vscode-prometheus",
	"displayName": "Prometheus",
	"description": "prometheus integration for vscode (WIP)",
	"publisher": "slrtbtfs",
	"license": "Apache-2.0",
	"repository": "https://github.com/slrtbtfs/vscode-prometheus",
	"version": "0.1.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Language Packs"
	],
	"activationEvents": [
		"onLanguage:promql",
		"onLanguage:yaml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [],
		"languages": [
			{
				"id": "promql",
				"extensions": [
					".promql"
				],
				"aliases": [
					"PromQL",
					"promql"
				]
			}
		],
		"grammars": [
			{
				"language": "promql",
				"scopeName": "source.promql",
				"path": "./syntaxes/promql.tmlanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Prometheus",
				"properties": {
					"prometheus.langserverConfigPath": {
						"type": "string",
						"description": "Path to the PromQL langserver configuration",
						"scope": "window"
					},
					"prometheus.langserverBinaryPath": {
						"type": "string",
						"default": "",
						"description": "Path to the PromQL langserver binary. If none is provided, the latest release is dowloaded automatically.",
						"scope": "window"
					},
					"prometheus.url": {
						"type": "string",
						"default": "http://localhost:9090",
						"description": "URL of the Prometheus Server used for completions",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"compile-ts": "tsc -p ./",
		"compile": "make",
		"watch": "tsc -watch -p ./",
		"pretest": "make",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "make webpack",
		"webpack": "webpack --mode development",
		"webpack-production": "webpack --mode production",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"dependencies": {
		"@types/follow-redirects": "^1.8.0",
		"@types/glob": "^7.1.1",
		"@types/tar-fs": "^1.16.2",
		"@types/ws": "^6.0.4",
		"follow-redirects": "^1.10.0",
		"fs": "0.0.1-security",
		"glob": "^7.1.6",
		"https": "^1.0.0",
		"tar-fs": "^2.0.0",
		"vscode-languageclient": "^5.2.1",
		"ws": "^7.2.1",
		"zlib": "^1.0.5"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.13",
		"@types/vscode": "^1.38.0",
		"mocha": "^6.2.2",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.1",
		"typescript": "^3.7.5",
		"vsce": "^1.71.0",
		"vscode-test": "^1.3.0",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	}
}
