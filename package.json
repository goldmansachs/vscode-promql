{
	"name": "vscode-prometheus",
	"displayName": "Prometheus",
	"description": "prometheus integration for vscode (WIP)",
	"publisher": "slrtbtfs",
	"repository": "https://github.com/slrtbtfs/vscode-prometheus",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Language Packs"
	],
	"activationEvents": [
		"onCommand:extension.usePromQLLangServer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.usePromQLLangServer",
				"title": "Use PromQL Langserver for This File"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
